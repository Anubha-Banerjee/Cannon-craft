<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

        <ImageView
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/soundon"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/Button01"
            android:background="@drawable/custom_btn_seagull"
            android:onClick="startGame"
            android:paddingBottom="10dip"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:paddingTop="10dip"
            android:shadowDy="50"
            android:shadowRadius="50"
            android:text="Play"
            android:textColor="#ffff00"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Button01"
            android:layout_toRightOf="@+id/buttonOption"
            android:background="@drawable/custom_btn_seagull"
            android:onClick="endGame"
            android:paddingBottom="10dip"
            android:paddingLeft="45dip"
            android:paddingRight="45dip"
            android:paddingTop="10dip"
            android:text="Exit"
            android:textColor="#ffff00"
            android:textSize="40sp" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonOption"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/sound"
            android:background="@drawable/custom_btn_seagull"
            android:onClick="showHelp"
            android:paddingBottom="10dip"
            android:paddingLeft="38dip"
            android:paddingRight="38dip"
            android:paddingTop="10dip"
            android:shadowDy="50"
            android:shadowRadius="50"
            android:text="Help"
            android:textColor="#ffff00"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStart"
            android:layout_toLeftOf="@+id/Button01"
            android:background="@drawable/custom_btn_seagull"
            android:onClick="showCredits"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:text="Credits"
            android:textColor="#ffff00"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonStart"
            android:textColor="#ff0000"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonOption"
            android:layout_alignTop="@+id/sound"
            android:src="@drawable/gamename" />
        
</RelativeLayout>